---
    import { getImage } from "astro:assets";

    const { imgMobile, imgDesktop, alt } = Astro.props;

    const mobileImg = await getImage({
        src: imgMobile,
        format: 'webp',
        width: 654,
        height: 480,
    });

    const desktopImg = await getImage({
        src: imgDesktop,
        format: 'webp',
        width: 540,
        height: 446,
    })
---

<picture>
    <source media="(max-width: 1279px)" srcset={mobileImg.src} />
    <source media="(min-width: 1280px)" srcset={desktopImg.src} />
    <img src={desktopImg.src} alt={alt} class="mix-blend-multiply object-cover w-full h-full rounded-t-lg xl:rounded-tl-none xl:rounded-r-lg opacity-[0.7511]"/>
</picture>
